<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:id="@+id/relativeAbout"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android">
	
	<ImageView android:id="@+id/imgAbout" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:src="@drawable/icon"
		android:layout_alignParentTop="true" android:layout_centerHorizontal="true">
	</ImageView>
	
	<TextView android:id="@+id/appAbout" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="@string/app_name"
		android:layout_below="@+id/imgAbout" android:layout_centerHorizontal="true">
	</TextView>
	
	<TextView android:id="@+id/verAbout" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="@string/version"
		android:layout_toRightOf="@+id/appAbout" android:layout_below="@+id/imgAbout"
		android:paddingLeft="10px">
	</TextView>
	
	<TextView android:id="@+id/textAbout" android:layout_width="wrap_content"
		android:text="@string/about" android:layout_height="wrap_content"
		android:layout_below="@+id/appAbout" android:layout_alignParentLeft="true"
		android:paddingTop="20px">
	</TextView>
	
	<TextView android:id="@+id/author" android:layout_width="wrap_content"
		android:layout_height="93px" android:text="@string/author"
		android:layout_below="@+id/textAbout" android:layout_alignParentLeft="true"
		android:paddingTop="10px">
	</TextView>
	
</RelativeLayout>
